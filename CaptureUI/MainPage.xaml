<Page
    x:Class="CaptureUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CaptureUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" VerticalAlignment="Center">
        <Button Content="Picture" Background="GreenYellow" Click="Button_Click" Margin="0,40,0,40"/>
        <Button Content="Video" Background="Pink" Click="Button_Click_1"/>
        <Image x:Name="Img" Width="200" Height="200"/>
        <MediaElement x:Name="media" Width="320" Height="240"/>
    </StackPanel>
</Page>
